{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[A-Za-zА-Яа-яЁё]+$"
    },
    "surname": {
      "type": "string",
      "pattern": "^[A-Za-zА-Яа-яЁё]+$"
    },
    "patronymic": {
      "type": "string",
      "pattern": "^[A-Za-zА-Яа-яЁё]+$"
    },
    "telephone": {
      "type": "string",
      "pattern": "^\\+7\\([0-9]{3}\\)[0-9]{3}-[0-9]{2}-[0-9]{2}$"
    },
    "birthdate": {
      "type": "string",
      "format": "date"
    },
    "passport": {
      "type": "string",
      "pattern": "^[0-9]{4} [0-9]{8}$"
    }
  },
  "required": ["name", "surname", "patronymic", "telephone", "birthdate", "passport"],
  "additionalProperties": false
}
